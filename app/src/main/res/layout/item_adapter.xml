<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_default">

    <com.google.android.material.card.MaterialCardView
        id="@+id/cardToDo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

        <TextView
            android:id="@+id/textTitleCardToDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="parent"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Otimizar código para deixar o aplicativo mais rápido e fácil de testar."
            android:ellipsize="end"
            android:layout_margin="16dp"
            android:maxLines="2"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_arrow_left_orange"
            android:layout_marginTop="106dp"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_arrow_right_blue"
            android:layout_marginTop="106dp"
            android:layout_marginStart="330dp"/>

        <TextView
            android:id="@+id/textEdit"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_task"
            android:backgroundTint="@color/color_edit"
            android:padding="8dp"
            android:layout_marginTop="100dp"
            android:text="Editar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginStart="84dp"/>

        <TextView
            android:id="@+id/textRemove"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_task"
            android:backgroundTint="@color/color_delete"
            android:padding="8dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="200dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Remover"/>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>